{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./*.js",
    "server/**/*.ts",
    "test/**/*.ts",
    "interfaces/**/*.ts",
    "client/**/*.ts",
    "client/**/*.tsx"
  ]
}
