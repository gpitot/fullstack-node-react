{
  "name": "fullstack-node-react-starter",
  "version": "1.2.0",
  "description": " A basic starter for an express.js server with Typescript and vite react",
  "main": "dist/index.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "start": "ts-node dist/server/index.js",
    "dev:server": "nodemon server/index.ts",
    "dev:client": "vite",
    "build:server": "tsup server",
    "build:client": "vite build",
    "build": "rm -rf ./dist && yarn build:server && yarn build:client",
    "lint": "eslint --fix server client test",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "deploy": "yarn lint && yarn typecheck && yarn build && fly deploy"
  },
  "keywords": [],
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.2.5",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "tsup": "^7.2.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}
